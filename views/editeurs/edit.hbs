<h1 class="title">Modifier l'éditeur : {{editeur.nom}}</h1>

<div class="form-container">
  <form action="/editeurs/{{editeur.id}}/edit" method="POST" class="edit-form">
    <div class="form-group">
      <label for="nom" class="form-label">Nom de l'éditeur :</label>
      <input 
        type="text" 
        name="nom" 
        id="nom" 
        value="{{editeur.nom}}" 
        required 
        class="form-input"
      />
    </div>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Modifier</button>
      <a href="/editeurs" class="btn btn-secondary">Retour à la liste des éditeurs</a>
    </div>
  </form>
</div>
